<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lfk.poem" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".Opening"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Collect"
            android:label="@string/title_activity_collect"
            android:launchMode="singleTask"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".Collect_item"
            android:label="@string/title_activity_collect_item"
            android:launchMode="singleTask"
            android:parentActivityName=".Collect" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name"
             >
        </activity>
    </application>

</manifest>
